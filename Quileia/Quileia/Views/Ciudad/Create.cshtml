@model Quileia.Data.Entities.Ciudad

@{
    ViewData["Title"] = "Crear Ciudad";
}

<h1 class="text-center">Crear Ciudad</h1>


<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCiudad" class="control-label"></label>
                <input asp-for="NombreCiudad" class="form-control" />
                <span asp-validation-for="NombreCiudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidaddeHabitantes" class="control-label"></label>
                <input asp-for="CantidaddeHabitantes" class="form-control" />
                <span asp-validation-for="CantidaddeHabitantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SitioTuristico" class="control-label"></label>
                <input asp-for="SitioTuristico" class="form-control" />
                <span asp-validation-for="SitioTuristico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelMasReservado" class="control-label"></label>
                <input asp-for="HotelMasReservado" class="form-control" />
                <span asp-validation-for="HotelMasReservado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Volver</a>
            </div>
        </form>
    </div>
</div>


