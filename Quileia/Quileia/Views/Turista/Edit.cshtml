@model Quileia.Data.Entities.Turista


@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Editar</h1>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCompleto" class="control-label"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDeNacimiento" class="control-label"></label>
                <input asp-for="FechaDeNacimiento" class="form-control" />
                <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identificacion" class="control-label"></label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrecunciaDeViaje" class="control-label"></label>
                <input asp-for="FrecunciaDeViaje" class="form-control" />
                <span asp-validation-for="FrecunciaDeViaje" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PresupuestoDeViaje" class="control-label"></label>
                <input asp-for="PresupuestoDeViaje" class="form-control" />
                <span asp-validation-for="PresupuestoDeViaje" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <a class="form-check-label">
                    <input class="form-check-input" asp-for="UsaTarjeta" />@Html.DisplayNameFor(model => model.UsaTarjeta)
                </a>
            </div>
            <div>
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Volver</a>
            </div>
        </form>

    </div>

</div>
